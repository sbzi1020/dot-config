{
    "React function component": {
        "prefix": [
            "rfc",
            "react-functional-component"
        ],
        "body": [
            "import React from 'react'",
            "",
            "const ${2:ComponentName} = () => {",
            "    return (<div>$0</div>)",
            "}",
            "",
            "export default React.memo(${2:ComponentName})"
        ]
    },
    "comment": {
        "prefix": [
            "/"
        ],
        "body": [
            "{/*$0*/}"
        ]
    },
}
