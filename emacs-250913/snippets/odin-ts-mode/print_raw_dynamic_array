# -*- mode: snippet -*-
# name: print_raw_dynamic_array
# key: prda
# --
print_raw_dynamic_arr :: proc(arr_ptr: ^[dynamic]\$T, var_name_and_prefix: string) {
    raw_arr_ptr := cast(^runtime.Raw_Dynamic_Array)arr_ptr
    fmt.printf(
        "\n>>> %s\n\ttype: %v\n\tstruct instance: %#v\n\tarray data: %#v\n",
        var_name_and_prefix,
        typeid_of(type_of(raw_arr_ptr)),
        raw_arr_ptr^,
        arr_ptr^
    )
}